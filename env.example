# Yoddle AI System Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/yoddle_db

# Claude AI API
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API (альтернатива)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# AI Configuration
AI_MODEL=claude-3-haiku-20240307
AI_MAX_TOKENS=800
AI_TEMPERATURE=0.7

# Rate Limiting
AI_RATE_LIMIT_WINDOW=900000
AI_RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
AI_LOG_REQUESTS=true
